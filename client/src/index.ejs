    <% if (htmlWebpackPlugin.files.favicon) { %>
    <link rel="shortcut icon" href="<%= htmlWebpackPlugin.files.favicon%>">
    <% } %>
    <% for (var css in htmlWebpackPlugin.files.css) { %>
    <link rel="stylesheet" href="<%= htmlWebpackPlugin.files.css[css] %>">
    <% } %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">

    <!-- incompatible browser -->
    <style> .incompatibleBrowser { display: none; } </style>
</head>

<body>
    <!-- incompatible browser -->
    <div id="incompatibleBrowser" class="incompatibleBrowser">
        Yout Browser is outdated. Please update your browser for better experience.
    </div>
    <!-- loader -->
    <div class="loader"></div>
    <!-- main app -->
    <div id="container" class="container"></div>
    <% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
    <script src="<%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
    <% } %>
    <!-- incompatible browser -->
    <style> .no-js .incompatibleBrowser { display: block; } </style>
